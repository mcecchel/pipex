NAME		= pipex
RM			= rm -f
CFLAGS		= -Wall -Wextra -Werror -g -pedantic -I. -ILibft -Imlx_linux

# Libft
LIBFT_DIR	= Libft
LIBFT_LIB	= $(LIBFT_DIR)/libft.a

SRC		= 	src/utils.c \
			src/pipex.c \
			main.c


all: $(LIBFT_LIB) $(NAME)

$(LIBFT_LIB):
	@echo "ðŸ”§ Compilando Libft..."
	$(MAKE) -C $(LIBFT_DIR)

$(NAME): $(SRC)
	@echo "ðŸš€ Creando $(NAME)..."
	$(CC) $(CFLAGS) $(SRC) -o $(NAME) $(LIBFT_LIB) -lm
	$(MAKE) kira

%.o: %.c
	@echo "ðŸ›   Compilando $<..."
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(MAKE) clean -C $(LIBFT_DIR)

fclean: clean
	$(RM) $(NAME)
	$(MAKE) fclean -C $(LIBFT_DIR)

re: fclean all
.SILENT:

RED			:= ${shell tput setaf 1}
BLUE		:= ${shell tput setaf 4}
NO_COLOR	:= ${shell tput sgr0}
BOLD		:= ${shell tput bold}

kira:

